<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.CategoryFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/mangaCard"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="188dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/categoryManga"
                android:layout_width="160dp"
                android:layout_height="164dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/vol1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/categoryMangaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="28dp"
                android:text="View Manga Volumes"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/categoryManga"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/catMangaDesc"
                android:layout_width="164dp"
                android:layout_height="79dp"
                android:layout_marginTop="20dp"
                android:text="Browse Through our extensive collection of hight quality Manga Volumes"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/categoryManga"
                app:layout_constraintTop_toBottomOf="@+id/categoryMangaTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/figurineCard"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="188dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mangaCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/categoryFigurine"
                android:layout_width="160dp"
                android:layout_height="164dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ls"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/categoryFigurineTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="28dp"
                android:text="View Anime Figurines"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/categoryFigurine"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/catFigurineDesc"
                android:layout_width="164dp"
                android:layout_height="79dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:text="Browse Through our extensive collection of hight quality Anime Figurines"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/categoryFigurine"
                app:layout_constraintTop_toBottomOf="@+id/categoryFigurineTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/merchCard"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="188dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/figurineCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="160dp"
                android:layout_height="164dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/bounty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/categoryMerchTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="28dp"
                android:text="View Anime Merchandise"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/catMerchDesc"
                android:layout_width="164dp"
                android:layout_height="79dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:text="Browse Through our extensive collection of hight quality Anime Merchandise"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/categoryMerchTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
