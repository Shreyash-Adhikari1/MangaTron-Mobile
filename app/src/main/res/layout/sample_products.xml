<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="411dp"
        android:layout_height="179dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/displayProductImage"
                android:layout_width="156dp"
                android:layout_height="173dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/displayProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="29dp"
                android:text="Product Name"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/displayProductImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/displayProductDesc"
                android:layout_width="123dp"
                android:layout_height="46dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:text=" Product Descrition"
                app:layout_constraintStart_toEndOf="@+id/displayProductImage"
                app:layout_constraintTop_toBottomOf="@+id/displayProductName" />

            <TextView
                android:id="@+id/displayProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Product Price"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/displayProductDesc" />

            <TextView
                android:id="@+id/lblEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="68dp"
                android:text="Edit Product"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/displayProductPrice" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="$"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/displayProductImage"
                app:layout_constraintTop_toBottomOf="@+id/displayProductDesc" />

            <ImageView
                android:id="@+id/addToWishlist"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="88dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_star_rate_24" />

            <ImageView
                android:id="@+id/addToCart"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toEndOf="@+id/displayProductImage"
                app:layout_constraintTop_toBottomOf="@+id/displayProductPrice"
                app:srcCompat="@drawable/baseline_shopping_cart_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>